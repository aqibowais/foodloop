rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner of the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users collection
    match /users/{userId} {
      // Allow users to read their own document
      allow read: if isOwner(userId) || isAdmin();
      
      // Allow users to create their own document (during signup)
      // Ensure uid matches and required fields are present
      allow create: if isOwner(userId) && 
                      request.resource.data.uid == request.auth.uid &&
                      request.resource.data.email is string &&
                      request.resource.data.createdAt is string;
      
      // Allow users to update their own document
      // Prevent changing uid and email
      allow update: if isOwner(userId) && 
                      request.resource.data.uid == resource.data.uid &&
                      request.resource.data.email == resource.data.email;
      
      // Deny all other operations
      allow delete: if false;
    }
    
    // Listings collection (for future Module 3)
    match /listings/{listingId} {
      // Allow anyone authenticated to read available listings
      allow read: if isAuthenticated();
      
      // Allow users to create listings
      allow create: if isAuthenticated() && 
                      request.resource.data.donorId == request.auth.uid;
      
      // Allow listing owner to update their own listings
      allow update: if isAuthenticated() && 
                      resource.data.donorId == request.auth.uid;
      
      // Allow admins to update any listing
      allow update: if isAdmin();
      
      // Deny delete for now (or allow only admins)
      allow delete: if isAdmin();
    }
    
    // Requests collection (for future Module 4)
    match /requests/{requestId} {
      // Allow users to read requests related to their listings or their own requests
      allow read: if isAuthenticated() && 
                    (resource.data.receiverId == request.auth.uid || 
                     resource.data.donorId == request.auth.uid);
      
      // Allow users to create requests
      allow create: if isAuthenticated() && 
                      request.resource.data.receiverId == request.auth.uid;
      
      // Allow users to update their own requests or requests for their listings
      allow update: if isAuthenticated() && 
                      (resource.data.receiverId == request.auth.uid || 
                       resource.data.donorId == request.auth.uid);
      
      // Allow admins to read/update all requests
      allow read, update: if isAdmin();
    }
    
    // Complaints collection (for future Module 5)
    match /complaints/{complaintId} {
      // Allow users to create complaints
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid;
      
      // Allow users to read their own complaints
      allow read: if isAuthenticated() && 
                    resource.data.userId == request.auth.uid;
      
      // Allow admins to read/update all complaints
      allow read, update: if isAdmin();
    }
    
    // Deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

